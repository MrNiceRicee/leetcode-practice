{
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom"
    ],
    "types": [
      "bun-types"
    ],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
  }
}